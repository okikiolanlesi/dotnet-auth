@page
@model AuthWebApp.Pages.Account.LoginTwoFactorModel
@{
}

<h3>Enter your authenticator code</h3>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="LoginTwoFactorViewModel.SecurityCode"></label>
            </div>
            <div class="col-5">
                <input asp-for="LoginTwoFactorViewModel.SecurityCode" class="form-control" />
                <span class="text-danger" asp-validation-for="LoginTwoFactorViewModel.SecurityCode"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Verify" />
            </div>
            <div class="col-5">
                <input asp-for="LoginTwoFactorViewModel.RememberMe" type="hidden" />
            </div>

        </div>
    </form>
</div>
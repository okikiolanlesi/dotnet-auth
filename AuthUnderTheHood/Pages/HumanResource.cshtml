@page
@model AuthUnderTheHood.Pages.HumanResourceModel
@{
}
<div class="text-center">
    <h1>Welcome to HR Page</h1>

    <div>
        @if (Model.WeatherForecasts == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Summary</th>
                        <th>TemperatureF</th>
                        <th>TemperatureC</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.WeatherForecasts)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.Summary</td>
                            <td>@item.TemperatureF</td>
                            <td>@item.TemperatureC</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
